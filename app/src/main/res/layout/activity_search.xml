<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-11dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Search Student Database"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_search_uName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/et_v_search_lName" />

    <EditText
        android:id="@+id/et_v_search_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/et_v_search_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/et_v_search_uName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_search_fName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="Major:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/sp_v_major"
        app:layout_constraintTop_toBottomOf="@+id/et_v_search_uName" />

    <Spinner
        android:id="@+id/sp_v_major"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_search_gpaMax"
        app:layout_constraintEnd_toEndOf="@+id/et_v_search_gpaMax"
        app:layout_constraintStart_toStartOf="@+id/et_v_search_fName"
        app:layout_constraintTop_toTopOf="@+id/et_v_search_uName" />

    <Button
        android:id="@+id/btn_v_search_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginBottom="313dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lv_v_searchList" />

    <Button
        android:id="@+id/btn_v_search_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Home"
        app:layout_constraintBottom_toTopOf="@+id/lv_v_searchList"
        app:layout_constraintStart_toEndOf="@+id/et_v_search_gpaMin" />

    <ListView
        android:id="@+id/lv_v_searchList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_search_search" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="GPA Range:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/et_v_search_gpaMin"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_major" />

    <EditText
        android:id="@+id/et_v_search_gpaMin"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="Min"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_search_search"
        app:layout_constraintStart_toStartOf="@+id/btn_v_search_search"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/et_v_search_gpaMax"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Max"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_search_gpaMin"
        app:layout_constraintEnd_toEndOf="@+id/et_v_search_fName"
        app:layout_constraintStart_toStartOf="@+id/btn_v_search_home"
        app:layout_constraintTop_toTopOf="@+id/et_v_search_gpaMin" />

</androidx.constraintlayout.widget.ConstraintLayout>