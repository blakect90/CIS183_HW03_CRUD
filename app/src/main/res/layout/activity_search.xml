<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="22dp"
        android:text="Search Student Database"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_v_search_fName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_search_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_v_search_lName"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/et_v_search_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_v_search_uName"
        app:layout_constraintEnd_toEndOf="@+id/et_v_search_fName"
        app:layout_constraintStart_toStartOf="@+id/et_v_search_fName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_search_fName" />

    <EditText
        android:id="@+id/et_v_search_uName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/sp_v_major"
        app:layout_constraintEnd_toEndOf="@+id/et_v_search_lName"
        app:layout_constraintStart_toStartOf="@+id/et_v_search_lName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_search_lName" />

    <Spinner
        android:id="@+id/sp_v_major"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/sp_v_gpaRange"
        app:layout_constraintEnd_toEndOf="@+id/et_v_search_uName"
        app:layout_constraintStart_toStartOf="@+id/et_v_search_uName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_search_uName" />

    <Spinner
        android:id="@+id/sp_v_gpaRange"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_search_search"
        app:layout_constraintEnd_toEndOf="@+id/sp_v_major"
        app:layout_constraintStart_toStartOf="@+id/sp_v_major"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_major" />

    <Button
        android:id="@+id/btn_v_search_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/listView3"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_search_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_gpaRange" />

    <Button
        android:id="@+id/btn_v_search_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_search_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_search_search"
        app:layout_constraintTop_toTopOf="@+id/btn_v_search_search" />

    <ListView
        android:id="@+id/lv_v_searchList"
        android:layout_width="386dp"
        android:layout_height="306dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_search_search" />
</androidx.constraintlayout.widget.ConstraintLayout>