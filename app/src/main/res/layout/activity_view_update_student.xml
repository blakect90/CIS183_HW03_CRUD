<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUpdateStudent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_v_details_fName"
        app:layout_constraintEnd_toEndOf="@+id/et_v_details_fName"
        app:layout_constraintStart_toStartOf="@+id/et_v_details_fName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/et_v_details_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_v_details_lName"
        app:layout_constraintEnd_toEndOf="@+id/et_v_details_lName"
        app:layout_constraintStart_toStartOf="@+id/et_v_details_lName"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/et_v_details_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_v_details_age"
        app:layout_constraintEnd_toEndOf="@+id/et_v_details_age"
        app:layout_constraintStart_toStartOf="@+id/et_v_details_age"
        app:layout_constraintTop_toBottomOf="@+id/et_v_details_fName"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/et_v_details_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/et_v_details_uName"
        app:layout_constraintEnd_toEndOf="@+id/et_v_details_uName"
        app:layout_constraintStart_toStartOf="@+id/et_v_details_uName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_details_lName"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/et_v_details_uName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_v_details_email"
        app:layout_constraintEnd_toEndOf="@+id/et_v_details_email"
        app:layout_constraintStart_toStartOf="@+id/et_v_details_email"
        app:layout_constraintTop_toBottomOf="@+id/et_v_details_age"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/et_v_details_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_v_details_gpa"
        app:layout_constraintEnd_toEndOf="@+id/et_v_details_gpa"
        app:layout_constraintStart_toStartOf="@+id/et_v_details_gpa"
        app:layout_constraintTop_toBottomOf="@+id/et_v_details_uName"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/et_v_details_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="GPA"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/sp_v_details_major"
        app:layout_constraintStart_toStartOf="@+id/sp_v_details_major"
        app:layout_constraintTop_toBottomOf="@+id/et_v_details_email"
        app:layout_constraintVertical_bias="0.5" />

    <Spinner
        android:id="@+id/sp_v_details_major"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_details_home"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_details_update"
        app:layout_constraintStart_toStartOf="@+id/btn_v_details_home"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="73dp"
        android:text="Major:"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_details_home"
        app:layout_constraintStart_toStartOf="@+id/sp_v_details_major" />

    <Button
        android:id="@+id/btn_v_details_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:text="Home"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_v_details_update"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_v_details_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="82dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_details_home" />
</androidx.constraintlayout.widget.ConstraintLayout>